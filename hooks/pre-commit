#!/bin/sh
#
# Pre-commit hook to run format and lint checks
#
# This hook runs before each commit to ensure code quality.
# It formats code and runs linting checks.
#

echo "üîç Running pre-commit checks..."

# Format code (this modifies files if needed)
# Note: If files are modified, you may need to re-stage them
make format

# Run lint check
if ! make lint; then
    echo ""
    echo "‚ùå Pre-commit checks failed!"
    echo "Please fix linting errors before committing."
    echo ""
    exit 1
fi

echo "‚úÖ Pre-commit checks passed!"
exit 0

